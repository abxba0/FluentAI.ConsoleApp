    "Model": "claude-sonnet-4-20250514",
    "MaxTokens": 1500,
    "RequestTimeout": "00:02:00",
    "PermitLimit": 50,
    "WindowInSeconds": 60
  },
  "Google": {
    "Model": "gemini-2.5-flash",
